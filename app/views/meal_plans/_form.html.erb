<%= render partial: "shared/errors" %>

<%= form_for @meal_plan do |f| %>
  <%= f.hidden_field :start_date %>
  <%= f.hidden_field :end_date %>

  <div class="meals">
    <%= f.fields_for :meals do |meal| %>
      <%= meal.hidden_field :id %>
      <%= meal.hidden_field :date %>
      <p><%= meal.object.date.to_s %></p>
      <div class="form-control">
        <%= meal.label :recipe_id %>
        <%= meal.select :recipe_id, current_user.recipe_options %>
      </div>
      <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
